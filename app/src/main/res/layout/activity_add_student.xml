<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:orientation="vertical"
    android:background="@drawable/pass_a"
    android:layout_height="match_parent"
    tools:context="com.example.summerproject.summerproject.AddStudentActivity">
    <EditText
        android:id="@+id/username_edittext"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:hint="student username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/password_edittext"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:hint=" password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/confrim_password_edittext"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:hint="confirm password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_st"
        android:text="add" />
</LinearLayout>
